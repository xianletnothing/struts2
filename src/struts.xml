<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="BasicStruts2" extends="struts-default">
        <action name="hello" class="Action.HelloWorldAction" method="execute">
            <result name="success">/pages/HelloWorld.jsp</result>
        </action>
        <action name="searchUser" class="Action.SearchUserAction" method="search">
            <result name="success">/pages/HelloUser.jsp</result>
        </action>
    </package>
</struts>